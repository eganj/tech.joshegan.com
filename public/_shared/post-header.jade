h1
  a(href=post.url)= post.title

if post.updateDateString
  p
  | Posted on
  time(datetime= post.postDateTime)
    strong= " " + post.postDateString
  | , Updated on
  time.orange(datetime= post.updateDateTime)
    strong= " " + post.updateDateString

else
  p
  | Posted on
  time.orange(datetime= post.postDateTime)
    strong= " " + post.postDateString
